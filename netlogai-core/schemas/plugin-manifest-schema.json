{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NetLogAI Plugin Manifest Schema",
  "description": "Schema for NetLogAI plugin manifest files (plugin.json)",
  "type": "object",
  "required": [
    "name",
    "version",
    "api_version",
    "type",
    "entry_point",
    "author",
    "description"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "minLength": 3,
      "maxLength": 50,
      "description": "Unique plugin identifier (lowercase, alphanumeric, hyphens, underscores)"
    },
    "display_name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Human-readable plugin name for display purposes"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-z0-9]+)?$",
      "description": "Semantic version (e.g., 1.0.0, 1.2.3-beta)"
    },
    "api_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "NetLogAI Plugin API version compatibility (e.g., 1.0)"
    },
    "type": {
      "type": "string",
      "enum": ["security", "performance", "topology", "parser", "analytics", "visualization", "integration"],
      "description": "Primary plugin category"
    },
    "entry_point": {
      "type": "string",
      "description": "Plugin library filename (e.g., security_plugin.dll, topology_plugin.so)"
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 2,
          "maxLength": 100,
          "description": "Author or organization name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Contact email address"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Author's website or project page"
        }
      }
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Brief description of plugin functionality"
    },
    "long_description": {
      "type": "string",
      "maxLength": 2000,
      "description": "Detailed description with features and usage examples"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "log_analysis",
          "real_time_monitoring",
          "alerting",
          "configuration",
          "device_discovery",
          "topology_mapping",
          "performance_monitoring",
          "security_analysis",
          "threat_detection",
          "reporting",
          "visualization",
          "data_export",
          "custom_parsing"
        ]
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "List of plugin capabilities"
    },
    "supported_devices": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": ["cisco-ios", "cisco-nxos", "juniper-junos", "arista-eos", "generic-syslog"]
      },
      "uniqueItems": true,
      "description": "Supported network device types"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Dependency name"
          },
          "version": {
            "type": "string",
            "description": "Required version or version range"
          },
          "optional": {
            "type": "boolean",
            "default": false,
            "description": "Whether dependency is optional"
          }
        }
      },
      "description": "Plugin dependencies"
    },
    "configuration": {
      "type": "object",
      "properties": {
        "schema": {
          "type": "object",
          "description": "JSON schema for plugin configuration"
        },
        "defaults": {
          "type": "object",
          "description": "Default configuration values"
        },
        "required_settings": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of required configuration keys"
        }
      },
      "description": "Plugin configuration schema and defaults"
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+$",
            "description": "Command name (lowercase, alphanumeric, hyphens, underscores)"
          },
          "description": {
            "type": "string",
            "description": "Command description"
          },
          "parameters": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Parameter name"
                },
                "type": {
                  "type": "string",
                  "enum": ["string", "number", "boolean", "array", "object"]
                },
                "required": {
                  "type": "boolean",
                  "default": false
                },
                "description": {
                  "type": "string",
                  "description": "Parameter description"
                }
              }
            }
          }
        }
      },
      "description": "Available plugin commands"
    },
    "permissions": {
      "type": "object",
      "properties": {
        "network_access": {
          "type": "boolean",
          "default": false,
          "description": "Requires network access permissions"
        },
        "file_system_access": {
          "type": "boolean",
          "default": false,
          "description": "Requires file system access permissions"
        },
        "system_commands": {
          "type": "boolean",
          "default": false,
          "description": "Requires system command execution permissions"
        },
        "device_configuration": {
          "type": "boolean",
          "default": false,
          "description": "Requires device configuration access"
        }
      },
      "description": "Security permissions required by plugin"
    },
    "license": {
      "type": "string",
      "description": "Plugin license (e.g., MIT, Apache-2.0, GPL-3.0, Commercial)"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Plugin homepage or documentation URL"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source code repository URL"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 30
      },
      "maxItems": 10,
      "uniqueItems": true,
      "description": "Keywords for plugin discovery"
    },
    "minimum_netlogai_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Minimum required NetLogAI version"
    },
    "resources": {
      "type": "object",
      "properties": {
        "memory_mb": {
          "type": "number",
          "minimum": 1,
          "description": "Estimated memory usage in MB"
        },
        "cpu_intensive": {
          "type": "boolean",
          "default": false,
          "description": "Whether plugin performs CPU-intensive operations"
        }
      },
      "description": "Resource requirements and usage hints"
    },
    "metadata": {
      "type": "object",
      "description": "Additional plugin-specific metadata"
    }
  },
  "additionalProperties": false
}